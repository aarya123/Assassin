<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:background="@drawable/background_gradient">
	<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/icon"
			android:alpha=".25"/>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none"
			android:overScrollMode="never">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingTop="30dp"
				android:gravity="center">
			<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingLeft="40dp"
					android:paddingRight="40dp"
					android:paddingBottom="20dp"
					android:gravity="center">
				<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="15dp"
						android:id="@+id/mTargetImage"/>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Name:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Name"
							android:textSize="9pt"
							android:id="@+id/mName"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Sex:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Sex"
							android:textSize="9pt"
							android:id="@+id/mSex"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Race:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Race"
							android:textSize="9pt"
							android:id="@+id/mRace"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Age:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Age"
							android:textSize="9pt"
							android:id="@+id/mAge"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Height:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Height"
							android:textSize="9pt"
							android:id="@+id/mHeight"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Last Sighting:"
							android:textSize="9pt"
							android:textStyle="bold"/>
					<View
							android:layout_height="0dp"
							android:layout_width="0dp"
							android:layout_weight="1"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Location"
							android:textSize="9pt"
							android:id="@+id/mLocation"/>
				</LinearLayout>
				<Button
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Kill"
						android:id="@+id/mKill"
						android:layout_margin="10dp"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Power Ups"
						android:id="@+id/mPowerUpText"
						android:textStyle="bold"
						android:textSize="9pt"
						android:layout_margin="5dp"/>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:paddingTop="10dp">
					<ImageView
							android:layout_width="0dp"
							android:layout_weight=".5"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:id="@+id/mRadar"
							android:src="@drawable/radar"/>
					<ImageView
							android:layout_width="0dp"
							android:layout_weight=".5"
							android:layout_height="wrap_content"
							android:paddingLeft="10dp"
							android:id="@+id/mInvisibility"
							android:src="@drawable/invisibility"/>
				</LinearLayout>
			</LinearLayout>
			<fragment
					android:id="@+id/map"
					android:layout_width="match_parent"
					android:layout_height="550dp"
					class="com.google.android.gms.maps.MapFragment"/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>